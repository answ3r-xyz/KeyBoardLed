<Window x:Class="KeyboardLed.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyboard LED Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border x:Name="OverlayBorder" 
            Background="#CC000000" 
            CornerRadius="5" 
            Padding="8,4"
            BorderThickness="1"
            BorderBrush="#33FFFFFF">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
        </Border.Effect>
        
        <StackPanel Orientation="Horizontal" x:Name="IndicatorPanel">
            <!-- Num Lock -->
            <Border x:Name="NumLockIndicator" 
                    Background="#32CD32" 
                    CornerRadius="3" 
                    Padding="8,4" 
                    Margin="2"
                    Visibility="Visible">
                <TextBlock x:Name="NumLockText" 
                           Text="Num Lock ON" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Caps Lock -->
            <Border x:Name="CapsLockIndicator" 
                    Background="#32CD32" 
                    CornerRadius="3" 
                    Padding="8,4" 
                    Margin="2"
                    Visibility="Visible">
                <TextBlock x:Name="CapsLockText" 
                           Text="Caps Lock ON" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Scroll Lock -->
            <Border x:Name="ScrollLockIndicator" 
                    Background="#32CD32" 
                    CornerRadius="3" 
                    Padding="8,4" 
                    Margin="2"
                    Visibility="Visible">
                <TextBlock x:Name="ScrollLockText" 
                           Text="Scroll Lock ON" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="11"
                           VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Border>
</Window>
